scalar UUID

enum FuelType {
    GASOLINE
    DIESEL
    ELECTRIC
    GASOLINE_HYBRID
    DIESEL_HYBRID
    HYBRID_PLUGIN
}

enum VehicleSegment {
    CABRIO
    ESTATE
    CITY
    COUPE
    MINIVAN
    SEDAN
    SUV
    OFFROAD
    UTILITARIAN
}

enum Transmission {
    MANUAL
    AUTOMATIC
}

type Vehicle {
    id: UUID!
    brand: String!
    model: String!
    segment: VehicleSegment!
    price: Float!
    kms: Int!
    month: Int!
    year: Int!
    fuel: FuelType!
    cm3: Int
    kwh: Float
    hp: Int!
    transmission: Transmission!
    consumption: String!
    sold: Boolean!
    deleted: Boolean!
    imageUrls: [String!]!
}

input VehicleInput {
    brand: String!
    model: String!
    segment: VehicleSegment!
    price: Float!
    kms: Int!
    month: Int!
    year: Int!
    fuel: FuelType!
    cm3: Int
    kwh: Float
    hp: Int!
    transmission: Transmission!
    consumption: String!
}

input VehicleUpdateInput {
    id: UUID!
    brand: String
    model: String
    segment: VehicleSegment
    price: Float
    kms: Int
    month: Int
    year: Int
    fuel: FuelType
    cm3: Int
    kwh: Float
    hp: Int
    transmission: Transmission
    consumption: String
    sold: Boolean
    deleted: Boolean
}

type Query {
    getAllVehicles: [Vehicle!]!
    getAllAvailableVehicles: [Vehicle!]!
    getVehicleById(id: UUID!): Vehicle
    getVehicleImages(vehicleId: UUID!): [String!]!
}

type Mutation {
    createVehicle(input: VehicleInput!): Vehicle!
    updateVehicle(input: VehicleUpdateInput!): Vehicle
    deleteVehicle(id: UUID!, hardDelete: Boolean): Boolean!
}